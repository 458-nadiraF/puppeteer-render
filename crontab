# Run the start_ngrok.sh script at 8 AM every weekday (Mon-Fri)
0 8 * * 1-5 /usr/src/app/start_ngrok.sh >> /var/log/cron.log 2>&1

# Kill the pm2 process and ngrok at 4 PM every weekday (Mon-Fri)
0 16 * * 1-5 pkill -f "ngrok" >> /var/log/cron.log 2>&1
0 16 * * 1-5 pm2 stop all >> /var/log/cron.log 2>&1
